<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="64dp"
    android:paddingBottom="64dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/login_alert_dialog_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Provide a valid e-mail and password"
        android:textColor="@color/colorGrey"
        android:textSize="@dimen/large_text_size"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/login_alert_dialog_name_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/average_margin"
        android:layout_marginTop="@dimen/large_margin"
        android:layout_marginEnd="@dimen/average_margin"
        android:hint="First and last name"
        android:textColor="@color/colorGrey"
        android:textSize="@dimen/average_text_size"
        app:backgroundTint="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@id/login_alert_dialog_text_view" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/login_alert_dialog_email_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/average_margin"
        android:layout_marginTop="@dimen/large_margin"
        android:layout_marginEnd="@dimen/average_margin"
        android:hint="E-mail address *"
        android:textColor="@color/colorGrey"
        android:textSize="@dimen/average_text_size"
        app:backgroundTint="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@id/login_alert_dialog_name_edit_text" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/login_alert_dialog_password_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/average_margin"
        android:layout_marginTop="@dimen/large_margin"
        android:layout_marginEnd="@dimen/average_margin"
        android:hint="Password *"
        android:textColor="@color/colorGrey"
        android:textSize="@dimen/average_text_size"
        app:backgroundTint="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@id/login_alert_dialog_email_edit_text" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/login_alert_dialog_close_button"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/extra_large_margin"
        android:layout_marginTop="@dimen/large_margin"
        android:text="Cancel"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_alert_dialog_password_edit_text" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/login_alert_dialog_login_button"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/large_margin"
        android:layout_marginEnd="@dimen/extra_large_margin"
        android:text="Login"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_alert_dialog_password_edit_text" />


</androidx.constraintlayout.widget.ConstraintLayout>